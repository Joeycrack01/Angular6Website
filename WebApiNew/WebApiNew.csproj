    <None Include="..\..\..\..\..\JOEY%2527S\Source\Repos\angular6Website\WebApiNew\ClientApp\src\assets\common\scripts.js" />
    <None Include="..\..\..\..\..\JOEY%2527S\Source\Repos\angular6Website\WebApiNew\ClientApp\src\assets\common\styles.css" />
    <None Include="..\..\..\..\..\JOEY%2527S\Source\Repos\angular6Website\WebApiNew\ClientApp\src\assets\common\styles.css" />
    <None Include="..\..\..\..\..\JOEY%2527S\Source\Repos\angular6Website\WebApiNew\ClientApp\src\assets\plugin-frameworks\bootstrap.css" />
    <None Include="..\..\..\..\..\JOEY%2527S\Source\Repos\angular6Website\WebApiNew\ClientApp\src\assets\plugin-frameworks\bootstrap.css" />
    <None Include="..\..\..\..\..\JOEY%2527S\Source\Repos\angular6Website\WebApiNew\ClientApp\src\assets\plugin-frameworks\bootstrap.js" />
